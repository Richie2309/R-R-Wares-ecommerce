                    <label for="name" class="d-block fs-5 head text-start bg-light">Category Name</label>
                    <input class="form-control" type="text" name="name" />
                    <% if (err) { %>
                        <p class="err p-0 d-block text-danger">
                            <%= err %>
                        </p>
                        <% } %>

                            <br><button type="submit" class="btn btn-dark">Add Category</button>
            </div>
            </form>
        </div>
    </div>


    </div>
