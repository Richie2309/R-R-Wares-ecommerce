    <section class="h-100 h-custom font-family-Bai-Jamjuree">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12">
                    <div class="card card-registration card-registration-2 border-5 border-warning rounded-4">
                        <div class="card-body p-0">
                            <div class="row g-0">
                                <div class="col-lg-8">
                                    <div class="p-5">
                                        <div class="d-flex justify-content-between align-items-center mb-5">
                                            <h1 class="fw-bold mb-0 text-black">Your Cart</h1>
                                            <h6 class="mb-0 text-muted">
                                                <%= cartProducts ? cartProducts.length : 0 %> Items
                                            </h6>
                                        </div>
                                        <hr class="my-4 border-5 text-dark">
                                        <% if (cartProducts && cartProducts.length> 0) { %>
                                            <% cartProducts.forEach((product,index)=> { %>
                                                <div class="row mb-4 d-flex justify-content-between align-items-center">
                                                    <div class="col-md-2 col-lg-2 col-xl-2">
                                                        <img src="<%= product.pDetail && product.pDetail[0] ? product.pDetail[0].images[0] : '' %>"
                                                            class="img-fluid rounded-3" alt="Cotton T-shirt">
                                                    </div>
                                                    <div class="col-md-3 col-lg-3 col-xl-3">
                                                        <h6 class="text-muted">
                                                            <%= product.pDetail && product.pDetail[0] ?
                                                                product.pDetail[0].brand : '' %>
                                                        </h6>
                                                        <h6 class="text-black mb-0">
                                                            <%= product.pDetail && product.pDetail[0] ?
                                                                product.pDetail[0].pName : '' %>
                                                        </h6>
                                                    </div>
                                                    <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                                        <button class="btn btn-link px-2"
                                                            onclick="decrementQuantity('<%= index %>','<%= product.pDetail[0]._id %>')">
                                                            <i class="fas fa-minus"></i>
                                                        </button>

                                                        <input id="form<%= index%>" min="1"
                                                            max="<%= product.pDetail[0].units %>" name="quantity"
                                                            value="<%= product.products.units %>" type="number"
                                                            class="form-control form-control-sm" readonly />

                                                        <button class="btn btn-link px-2"
                                                            onclick="incrementQuantity('<%= index %>','<%= product.pDetail[0]._id %>')">
                                                            <i class="fas fa-plus"></i>
                                                        </button>
                                                    </div>
                                                    <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                                        <h6 class="mb-0">â‚¹
                                                            <%=product.products.units*product.pDetail[0].price %>
                                                        </h6>
                                                    </div>
                                                    <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                                        <a href="/userDeleteCart?productId=<%= product.pDetail[0]._id  %>"
                                                            class="text-muted"><i class="fas fa-times"></i></a>
                                                    </div>
                                                </div>
                                                <hr class="my-4 border-5 text-dark">

                                                <% }); %>
                                                    <% } else { %>
                                                        <h1>Your cart is empty</h1>
                                                        <% } %>

                                    </div>
                                </div>
                                <% if (cartProducts && cartProducts.length> 0) { %>
                                    <div class="col-lg-4 bg-light text-dark rounded-4">
                                        <div class="p-5 rounded-4">
                                            <h3 class="fw-bold mb-5 mt-2 pt-1">Summary</h3>
                                            <hr class="border-5 text-dark">
                                            <h5 class="text-uppercase mb-3 text-success">Give code</h5>
                                            <form class="card p-2">
                                                <div class="input-group">
                                                    <input type="text" class="form-control border-success"
                                                        placeholder="Promo code">
                                                    <div class="input-group-append">
                                                        <button type="submit" class="btn btn-success">Redeem</button>
                                                    </div>
                                                </div>
                                            </form>
                                            <!-- <div class="mb-5">
                                                <div class="form-outline">
                                                    <input type="text" id="form3Examplea2"
                                                        class="form-control form-control-lg border border-1 border-success" />
                                                    <label class="form-label text-success" for="form3Examplea2">Enter your
                                                        code</label>
                                                </div>
                                            </div> -->

                                            <hr class="my-4 b border-5 text-dark">

