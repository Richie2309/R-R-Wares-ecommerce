<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="/css/users/userCart.css">
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-scroll shadow-0 bg-black mb-4">
        <div class="container">
            <a class="navbar-brand text-light" href="/">R&R <br>Wares</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <i class="fas fa-bars text-light"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item" id="him">
                        <!-- <a class="nav-link him" href="#!">FOR HIM</a> -->
                    </li>
                    <li class="nav-item" id="her">
                        <!-- <a class="nav-link her" href="#!">FOR HER</a> -->
                    </li>

                    <li>
                        <div class="form">
                            <i class="fa fa-search text-black bg-light"></i>
                            <input type="text" class="form-control form-input bg-light text-dark" placeholder="Search">
                        </div>
                    </li>

                    <div class="left">
                        <li class="nav-item p-1">
                            <div class="round bg-light">
                                <a class="nav-link" href="#!">
                                    <i class="fa-regular fa-heart text-black"></i>
                                </a>
                            </div>
                        </li>
                        <li class="nav-item p-1">
                            <div class="round bg-light">
                                <a class="nav-link" href="/userProfile">
                                    <i class="fa-solid fa-user text-black"></i>
                                </a>
                            </div>

                        </li>
                        <li class="nav-item p-1">
                            <div class="round bg-light">
                                <a class="nav-link" href="/userCart">
                                    <div class="position-relative contain">
                                        <i class="fa-solid fa-cart-shopping text-black"></i>
                                        <% if (cartProducts.length) { %>
                                            <span class="position-absolute badgeCustom">
                                                <p class="count text-black">
                                                    <%= cartProducts.length %>
                                                </p>
                                            </span>
                                        <% } %>
                                    </div>
                                </a>
                            </div>
                        </li>
                        <li class="nav-item p-1">
                            <div class="round bg-light">
                                <a class="nav-link" href="/userLogout">
                                    <button class="border-0"><i class="fa-solid fa-right-from-bracket"></i></button>
                                </a>
                            </div>
                        </li>
                    </div>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Navbar -->
    <div class="">
        <div class="p-5">
            <div class="d-flex justify-content-between align-items-center mb-5">
                <h3 class="fw-bold mb-0 text-black">Order Summary</h3>
            </div>
            <hr class="my-4">
            <% cartProducts.forEach((product,index)=> { %>
                <div class="row mb-4 d-flex justify-content-between align-items-center">
                    <div class="col-md-2 col-lg-2 col-xl-2">
                        <img src="<%= product.pDetail && product.pDetail[0] ? product.pDetail[0].images[0] : '' %>"
                            class="img-fluid rounded-3" alt="Cotton T-shirt">
                    </div>
                    <div class="col-md-3 col-lg-3 col-xl-3">
                        <h6 class="text-muted">
                            <%= product.pDetail && product.pDetail[0] ? product.pDetail[0].brand : '' %>
                        </h6>
                        <h6 class="text-black mb-0">
                            <%= product.pDetail && product.pDetail[0] ? product.pDetail[0].pName : '' %>
                        </h6>
                    </div>
                    <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                        <p>Quantity: <%= product.products.units %>
                        </p>
                    </div>
                    <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                        <h6 class="mb-0">₹<%=product.products.units*product.pDetail[0].price %>
                        </h6>
                    </div>
                </div>
                <hr>
                <% }) %>

        </div>
    </div>
    <div class="container">
        <div class="row ">
            <div class="col-md-4 order-md-2 mb-4">
                <h3 class="fw-bold mb-2 mt-2 pt-1">Summary</h3>
                <hr class="my-3 border-5 text-dark">

                <ul class="list-group mb-3">
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <h6 class="text-uppercase">items(<%= cartProducts ? cartProducts.length : 0 %>) </h6>
                        <h6>₹ <%= cartProducts.reduce((total, item)=> {
                                return total + (item.pDetail[0].price *
                                item.products.units);
                                }, 0) %>.00</h6>
                    </li>

                    <li class="list-group-item d-flex justify-content-between bg-light">
                        <div class="text-success">
                            <h6 class="my-0">Promo code</h6>
                            <small>EXAMPLECODE</small>
                        </div>
                        <h6 class="text-success">-₹</h6>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <h6>Total (INR)</h6>
                        <strong>₹ <%= cartProducts.reduce((total, item)=> {
                                return total + (item.pDetail[0].price *
                                item.products.units);
                                }, 0) %>.00</strong>
                    </li>
                </ul>
                <a href="#">

                </a><br><br>
                <div class="d-flex justify-content-center  align-items-center text-center">
                    <div class="mx-2">
                        <i class="fa-solid fa-shield fs-3"></i>
                    </div>
                    <div>
                        <p>Safe and Secure Payments.<br>Easy returns.100% Authentic
                            products.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-8 order-md-1">
                <div class="addresses-section">

                    <h4 class="mb-3">Billing address</h4>
                    <div class="row">
                        <% if (userInfo && userInfo.address && userInfo.address.length) { %>
                            <% for(let i=0;i<userInfo.address.length;i++){ %>
                                <div class="col-md-12">

                                    <div
                                        class="bg-white card addresses-item mb-4 border <%= userInfo.address[i]._id.toString() === userInfo.defaultAddress.toString() ? 'border-primary border-2' : 'border-secondary' %> shadow">
                                        <div class="gold-members p-4">
                                            <div class="media">
                                                <div class="mr-3"><i class="icofont-ui-home icofont-3x"></i>
                                                </div>
                                                <div class="media-body">
                                                    <h6 class="mb-1 text-secondary">
                                                        <%= userInfo.address[i].fullName %>
                                                    </h6>
                                                    <p class="text-black">
                                                        <%= userInfo.address[i].structuredAddress %>
                                                    </p>
                                                    <p class="mb-0 text-black font-weight-bold">
                                                        <a class="text-primary mr-3" data-toggle="modal"
                                                            data-target="#add-address-modal"
                                                            href="/userEditAddress?addressId=<%= userInfo.address[i]._id %>&returnTo=userCheckout">
                                                            <i class="fa-solid fa-pencil text-primary px-2"></i>
                                                        </a>

                                                    </p>
                                                    <button class="btn default"
                                                        onclick="setAsDefault('<%= userInfo.address[i]._id %>')">Set as
                                                        Default</button>

                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <% } %>
                                    <% } else { %>
                                        <p>No addresses available.</p>
                                        <% } %>
                    </div>
                </div>

                <a class="nav-link" id="addresses-tab" data-toggle="tab" href="/userAddAddress?returnTo=userCheckout"
                    role="tab" aria-controls="addresses" aria-selected="false"><i
                        class="fa-solid fa-plus text-bg-success rounded-5 px-2 py-2"></i> Add Addresses</a><br>
                <div class="row">
                    <hr class="mb-4">

                    <h4 class="mb-3">Payment</h4>

                    <div class="d-block my-3">
                        <form id="checkoutForm" action="/userCheckOut" method="POST">
                            <label style="font-weight: bold;">
                                <input type="radio" name="paymentMethod" value="online" onchange="proceedToBuy()">
                                Online Payment
                            </label><br>

                            <label style="font-weight: bold;">
                                <input type="radio" name="paymentMethod" value="cod" onchange="proceedToBuy()">
                                Cash on Delivery
                            </label>
                            <button type="submit" id="proceedToBuyBtn"
                                class="btn btn-success text-light btn-block btn-lg" style="display: none;">Proceed to
                                Buy</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div><br><br>
    <%-include('include/footer')-%>
    <script>
        async function setAsDefault(addressId) {
            try {
                const response = await fetch(`/changeAddress?id=${addressId}`, {
                    method: 'GET', // or 'POST' based on your server route
                    headers: {
                        'Content-Type': 'application/json',
                    },
                });

                if (response.ok) {
                    // Reload the page or update the UI as needed
                    location.reload(); // Example: reload the page
                } else {
                    console.error('Failed to set default address');
                }
            } catch (error) {
                console.error('Error during setAsDefault:', error);
            }
        }

        function proceedToBuy() {
            // Check if payment method and address are selected
            var selectedPaymentMethod = document.querySelector('input[name="paymentMethod"]:checked');
            var selectedAddress = document.querySelector('.addresses-item.border-primary');

            var proceedButton = document.getElementById('proceedToBuyBtn');

            if (selectedPaymentMethod && selectedAddress) {
                // If both payment method and address are selected, show the button
                proceedButton.style.display = 'block';
            } else {
                // If either payment method or address is not selected, hide the button
                proceedButton.style.display = 'none';
            }
        }
    </script>
</body>

</html>