                    </div>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Navbar -->
    <div class="container custom-container mb-4">
        <div class="row" id="main">
            <div class="col-md-12">
                <h2>Edit Your Profile</h2>
                <form role="form" action="/userEditProfile" method="post">
                    <hr class="colorgraph">
                    <div class="row">

                        <div class="col-xs-12 col-md-12 mx-auto">
                            <div class="form-group">
                                <label for="fullName">Full Name</label>
                                <input type="text" name="fName" 
                                    class="form-control input-lg border-3" placeholder="Full Name" value="<%= user.fullName  %>" tabindex="2">
                                    <p class="error m-0 text-danger">
                                        <%=errMesg.fName%>
                                      </p>
                            </div>
                        </div>
                    </div><br>
                    <div class="form-group col-md-12 mx-auto">
                        <label for="oldPass">Old Password</label>
                        <input type="password" name="oldPass" id="oldpass" class="form-control input-lg border-3"
                            placeholder="Old Password" tabindex="4">
                            <p class="error m-0 text-danger">
                                <%=errMesg.oldPass%>
                              </p>
                    </div><br>
                    <div class="col">
                        <div class="col-xs-12 col-md-12 mx-auto">
                            <div class="form-group">
                                <label for="newPAss">New Password</label>
                                <input type="password" name="newPass" id="password"
                                    class="form-control input-lg  border-3" placeholder="New Password" tabindex="5">
                                    <p class="error m-0 text-danger">
                                        <%=errMesg.newPass%>
                                      </p>
                            </div>
                        </div><br>
                        <div class="col-xs-12 col-md-12 mx-auto">
                            <div class="form-group">
                                <label for="conNewPass">Confirm New Password</label>
                                <input type="password" name="conNewPass" id="password_confirmation"
                                    class="form-control input-lg border-3" placeholder="Confirm New Password"
                                    tabindex="6">
                                    <p class="error m-0 text-danger">
                                        <%=errMesg.conNewPass%>
                                      </p>
                            </div>
                        </div>
                    </div>
                    <hr class="colorgraph">
                    <div class="row">
                        <div class="text-center">
                            <button type="submit" class="btn btn-outline-success w-25">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <%-include('include/footer')-%>
</body>

</html>