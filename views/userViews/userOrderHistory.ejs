    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const cancelButtons = document.querySelectorAll('.cancel-btn');
    
            cancelButtons.forEach(button => {
                button.addEventListener('click', function () {
                    // const orderId = button.getAttribute('data-order-id');
                    const productId= document.getElementById('prId').innerHTML
                    const orderId= document.getElementById('orderId').innerHTML
                    console.log(productId);

    
                    Swal.fire({
                        title: 'Are you sure?',
                        text: "You won't be able to revert this!",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Yes, cancel it!'
                    })
                    .then((result) => {
                        if (result.isConfirmed) {

                            window.location.href = `/userCancelOrder?orderId=${orderId}&productId=${productId}`
                        }
                    });
                });
            });
        });

        const isCancelled = '<%= isCancelled %>';

        if(Boolean(isCancelled)){
            Swal.fire(
                'Cancelled!',
                'Your order has been canceled.',
                'success'
            )
        }
    </script>
    
