    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="/css/users/userOrderHistory.css">
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-scroll shadow-0 bg-black mb-4">
        <div class="container">
            <a class="navbar-brand text-light" href="/">R&R <br>Wares</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <i class="fas fa-bars text-light"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item" id="him">
                        <!-- <a class="nav-link him" href="#!">FOR HIM</a> -->
                    </li>
                    <li class="nav-item" id="her">
                        <!-- <a class="nav-link her" href="#!">FOR HER</a> -->
                    </li>

                    <li>
                        <div class="form">
                            <i class="fa fa-search text-black bg-light"></i>
                            <input type="text" class="form-control form-input bg-light text-dark" placeholder="Search">
                        </div>
                    </li>

                    <div class="left">
                        <li class="nav-item p-1">
                            <div class="round bg-light">
                                <a class="nav-link" href="#!">
                                    <i class="fa-regular fa-heart text-black"></i>
                                </a>
                            </div>
                        </li>
                        <li class="nav-item p-1">
                            <div class="round bg-light">
                                <a class="nav-link" href="/userProfile">
                                    <i class="fa-solid fa-user text-black"></i>
                                </a>
                            </div>

                        </li>
                        <li class="nav-item p-1">
                            <div class="round bg-light">
                                <a class="nav-link" href="/userCart">
                                    <div class="position-relative contain">
                                        <i class="fa-solid fa-cart-shopping text-black"></i>
                                        <% if (cartProducts.length) { %>
                                            <span class="position-absolute badgeCustom">
                                                <p class="count text-black">
                                                    <%= cartProducts.length %>
                                                </p>
                                            </span>
                                            <% } %>
                                    </div>
                                </a>
                            </div>
                        </li>
                        <li class="nav-item p-1">
                            <div class="round bg-light">
                                <a class="nav-link" href="/userLogout">
                                    <button class="border-0"><i class="fa-solid fa-right-from-bracket"></i></button>
                                </a>
                            </div>
                        </li>
                    </div>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Navbar -->

    <section class="h-100 h-custom font-family-Bai-Jamjuree">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="">
                    <div class="card card-registration card-registration-2 border-5 border-warning rounded-4">
                        <div class="card-body p-0 mb-4">
                            <div class="row g-0">
                                <div class="col-md-12">
                                    <div class="p-5">
                                        <div class="d-flex justify-content-between align-items-center mb-5">
                                            <h1 class="fw-bold mb-0 text-black">Order History</h1>

                                        </div>
                                        <hr class="my-4 border-5 text-dark">
                                        <% for( let i=orders.length-1; i >=0; i-- ) { %>
                                            <div class="row mb-4 d-flex justify-content-between align-items-center">
                                                <div class="col-md-2 col-lg-2 col-xl-2">
                                                    <img src="<%= orders[i].orderItems.images[0] %>"
                                                        class="img-fluid rounded-3" alt="Cotton T-shirt">
                                                </div>
                                                <div class="col-md-3 col-lg-3 col-xl-3">
                                                    <h6 class="text-muted">
                                                        <%= orders[i].orderItems.brand %>
                                                    </h6>
                                                    <h6 class="text-black mb-0">
                                                        <%= orders[i].orderItems.pName %>
                                                    </h6>
                                                </div>
                                                <div id="prId" style="display: none;">
                                                    <%= orders[i].orderItems.productId %>
                                                </div>
                                                <div id="orderId" style="display: none;">
                                                    <%= orders[i]._id %>
                                                </div>
                                                <div class="col-md-3 col-lg-3 col-xl-2 d-flex">

                                                    <p>Qty: <%= orders[i].orderItems.units %>
                                                    </p>

                                                </div>
                                                <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                                    <h6 class="mb-0">
                                                        <%= orders[i].orderItems.price * orders[i].orderItems.units%>
                                                    </h6>
                                                </div>
                                                <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                                    <% if (orders[i].orderItems.orderStatus=="Cancelled" ) { %>
                                                        <h6 class="text-danger">Cancelled</h6>
                                                    <% } else if (orders[i].orderItems.orderStatus=="Shipped" ) { %>
                                                        <h6 class="text-warning">Shipped</h6>
                                                        <% } else if(orders[i].orderItems.orderStatus=="Delivered" ) {%>
                                                            <h6 class="text-success">Delivered</h6>
                                                            <a href="" class="btn text-light bg-warning">Return</a>
                                                            <% } else{%>
                                                                <h6 class="p-2">Ordered</h6>
                                                                <button
                                                                    onclick="cancelOrder('<%= orders[i].orderItems.productId %>','<%= orders[i]._id %>')"
                                                                    type="button"
                                                                    class="btn btn-outline-danger cancel-btn">
                                                                    Cancel
                                                                </button>
                                                                <% } %>

                                                </div>
                                            </div>
                                            <hr class="my-4 border-5 text-dark">
                                            <% } %>
                                                <% if (orders.length===0) { %>
                                                    <div class="errNoProduct position-absolute">
                                                        <h1>You didn't order anything!</h1>
                                                        <h4 class="my-6"><a href="/" class="btn btn-warning">Order
                                                                Now</a></h4>
                                                    </div>
                                                    <% } %>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <%-include('include/footer')-%>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            function cancelOrder(prId, orderId) {

                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, cancel it!'
                })
                    .then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = `/userCancelOrder?orderId=${orderId}&productId=${prId}`
                        }

                    });
            }
            const isCancelled = '<%= isCancelled %>';

            if (Boolean(isCancelled)) {
                Swal.fire(
                    'Cancelled!',
                    'Your order has been canceled.',
                    'success'
                )
            }
        </script>

</body>

</html>