    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/users/userstyle.css">
</head>

<body>
  <header>
    <div class="logo">R&R <br> Wares</div>
  </header>
  <section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black" style="border-radius: 25px;">
            <div class="card-body p-md-5">
              <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign In</p>
                  <%# if (isBlock) { %>
                    <!-- <div class="error p-0 d-inline-block">
                      <p>
                        <i
                          class="fa-solid fa-circle-exclamation"
                          style="color: #ff0000"
                        ></i>
                        This Account Is Blocked
                      </p>
                    </div> -->
                  <%# } %>
                  <% if (signinfo.isBlock) { %>
                    <div class="alert alert-danger" role="alert">
                      <i class="fas fa-exclamation-circle"></i> This Account Is Blocked
                    </div>
                  <% } %>
                  <form class="mx-1 mx-md-4" action="/userSigninEmail" method="post">

                    <div class="d-flex flex-row align-items-center mb-4">
                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="email">Your Email</label>
                        <input type="email" name="email" id="email" class="form-control" onkeyup="document.querySelector('.error').style.display='none'"/>
                        <p class="error name text-danger">
                          <%=signinfo?.name %>
                        </p>
                        <p class="error text-danger">
                          <%=signinfo?.noUser %>
                        </p>
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="password">Password</label>
                        <input type="password" name="password" id="password" class="form-control" onkeyup="document.querySelector('.error').style.display='none'"/>
                        <p class="error text-danger">
                          <%=signinfo?.pass %>
                        </p>
                        <p class="error text-danger">
                          <%=signinfo?.wrongPass %>
                        </p>
                      </div>
                    </div>

                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                      <button type="submit" class="btn btn-dark btn-lg">Sign In</button>
                    </div>
                    <div class="login-register text-md-end">
                      <a href="/userForgotPass">Forgot password?</a>
                    </div>
                    <div class="login-register mt-4">
                      <p class="text-start">Not a Member? <a href="/userSignupEmailVerify">Sign Up</a></p>
                    </div>
                  </form>

                </div>
                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                  <img src="/img/signpage.jpg" class="img-fluid" alt="Sample image">

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

</body>

</html>
