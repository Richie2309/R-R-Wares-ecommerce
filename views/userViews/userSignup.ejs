<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/users/userstyle.css">
</head>

<body>
  <header>
    <div class="logo">R&R <br> Wares</div>
  </header>

  <section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black" style="border-radius: 25px;">
            <div class="card-body p-md-5">
              <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign Up</p>

                  <form class="mx-1 mx-md-4" method="post" action="/userSignup">

                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="fullname">Full Name</label>
                        <input class="form-control " type="text" name="fname" id="fname"  onkeyup="document.querySelector('.error').style.display='none'"/>
                        <p class="error text-danger">
                          <%=signinfo?.name %>
                        </p>
                        <!-- <span id="blankMsg" style="color:red"> </span> -->
                      </div>
                    </div>


                    <!-- <div class="d-flex flex-row align-items-center mb-4">
                          <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                          <div class="form-outline flex-fill mb-0">
                            <label class="form-label" for="email">Your Email</label>
                            <input class="form-control" type="email" name="email" id="email" value=""/>
                            <span id="blankemail" style="color:red"> </span>
                          </div>
                        </div> -->


                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="password">Password</label>
                        <input class="form-control " type="password" name="password" id="password" onkeyup="document.querySelector('.error').style.display='none'" />
                        <p class="error pass2 text-danger">
                          <%=signinfo?.pass %>
                        </p>
                        <!-- <span id="message1" style="color:red"> </span> -->
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="reenterpassword">Re-enter password</label>
                        <input class="form-control " type="password" name="reenterpassword" id="reenterpassword" onkeyup="document.querySelector('.error').style.display='none'"/>
                        <p class="error pass3 text-danger">
                          <%=signinfo?.conPass %><%=signinfo?.bothPass%>
                        </p>
                        
                        <!-- <span id = "message2" style="color:red"></span> -->
                      </div>
                    </div>


                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                      <button type="submit" class="btn btn-dark btn-lg">Sign Up</button>
                    </div>
                    <div class="login-register mt-4">
                      <a href="/userSigninEmail">Already have an account?</a>
                    </div>
                  </form>

                </div>
                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                  <img src="/img/signpage.jpg" class="img-fluid" alt="Sample image">

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

</body>

</html>